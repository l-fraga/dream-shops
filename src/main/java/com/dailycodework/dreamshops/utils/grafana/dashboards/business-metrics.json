{
  "dashboard": {
    "id": null,
    "title": "DreamShops - Business Metrics",
    "tags": ["dreamshops", "business", "metrics"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Orders",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(http_server_requests_seconds_count{uri=\"/api/v1/orders/order\",method=\"POST\"}[24h]))",
            "legendFormat": "Orders (24h)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Total Products",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(http_server_requests_seconds_count{uri=\"/api/v1/products\",method=\"GET\"}[24h]))",
            "legendFormat": "Product Views (24h)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "blue", "value": null}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "User Registrations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(http_server_requests_seconds_count{uri=\"/api/v1/auth/register\",method=\"POST\"}[24h]))",
            "legendFormat": "Registrations (24h)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "purple", "value": null}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Login Attempts",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(http_server_requests_seconds_count{uri=\"/api/v1/auth/login\",method=\"POST\"}[24h]))",
            "legendFormat": "Logins (24h)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "orange", "value": null}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Order Creation Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{uri=\"/api/v1/orders/order\",method=\"POST\"}[5m]))",
            "legendFormat": "Orders/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Product Search Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{uri=~\"/api/v1/products.*\",method=\"GET\"}[5m]))",
            "legendFormat": "Product Searches/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Cart Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{uri=~\"/api/v1/cart.*\",method=\"POST\"}[5m]))",
            "legendFormat": "Cart Operations/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Authentication Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{uri=\"/api/v1/auth/login\",method=\"POST\"}[5m]))",
            "legendFormat": "Login Attempts/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "30s"
  }
}